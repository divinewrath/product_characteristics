<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bpfnet_product_pictos" resource="default" engine="innodb" comment="Product pictos">
        <column xsi:type="int" name="item_id" unsigned="true" nullable="false" identity="true"/>
        <column xsi:type="varchar" name="item_code" nullable="false"/>
        <column xsi:type="varchar" name="item_label" nullable="false"/>
        <column xsi:type="varchar" name="image" nullable="true" length="255" comment="Image"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="item_id"/>
        </constraint>
        <index referenceId="BPFNET_PRODUCT_PICTOS_ITEM_ID" indexType="btree">
            <column name="item_id"/>
        </index>
    </table>
</schema>
